# http://editorconfig.org
root = true

[*]
indent_style = space
trim_trailing_whitespace = true
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# Set default charset
charset = utf-8

# Matches multiple files with brace expansion notation
[*.{js,ts,css,scss,html,json}]
# 4 space indentation
indent_style = space
indent_size = 4

# Matches the exact files either package.json, .travis.yml or typings.json
[{package.json,.travis.yml,typings.json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

